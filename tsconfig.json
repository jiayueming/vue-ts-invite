{
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules"
    ],
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["*", "src/*"]
      },
      "jsx": "preserve",
      "jsxFactory": "h",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "target": "es5",                
      "module": "commonjs",
      "moduleResolution": "node",
      "isolatedModules": true,
      "lib": [
        "dom",
        "es7",
        "es2015.promise"
      ],
      "sourceMap": true,
      "pretty": true
    }
}